@model LoginVM
<div class="container border mt-4">
    <div class="row">
        <div class="col-12 p-3 bg-success text-center fs-4">Login</div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mt-4">
                <label class="col-12 mb-2" asp-for="@Model.Email" ></label>
                <input asp-for="Email" class="form-control col-12 p-2" />
            </div>
            <div class="mt-4">
                <label class="col-12 mb-2" asp-for="@Model.Password"></label>
                <input  asp-for ="Password" class="form-control col-12 p-2" />
            </div>
           <div class="form-check mt-2">
               <input asp-for ="RememberMe" class="mt-1" type="checkbox"/>
               <label asp-for="RememberMe">Remember me</label>
           </div>
            <div class="col-12 mt-4  fs-3  btn btn-success border ">Login</div>

            <div class="mt-2">Forgot your Password? <span><a asp-action="Register">Click here</a></span></div>
            <div class="mb-5">Register as a new user <span><a asp-action="Register">Click here</a></span></div>
           
               
           
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}