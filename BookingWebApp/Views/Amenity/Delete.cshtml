@model AmenityViewModel
<div class="container">
    <div class="row">
        <div class="bg-success text-center fs-4 p-3 border rounded">
            Delete Amenity
        </div>
    </div>
    <div class="row">
        <form method="post" class="border ">
            <input hidden asp-for="Amenity.Id" />


            <div asp-validation-summary="All" class="text-danger fs-4"></div>
           
                <div class="col-10">
                    <div class="py-3">
                        <label class="col-12" asp-for="Amenity.Name"></label>

                        <input disabled class="col-12 mt-1 p-2" asp-for="Amenity.Name" />
                    </div>
                    <div class="">
                        <label class="col-12" asp-for="Amenity.VillaId "></label>
                        <select disabled class="col-12 form-select" asp-for="Amenity.VillaId" asp-items="@Model.VillaList"></select>
                    </div>
                    <div class="py-3">
                        <label class="col-12" asp-for="Amenity.Description"></label>
                        <input disabled class="col-12 mt-1 p-2" asp-for="Amenity.Description" />
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class=" btn btn-primary w-100">Confirm</button>

                        </div>
                        <div class="col-6 ">
                            <button asp-action="Index" asp-controller="Amenity" formnovalidate class="btn btn-info w-100">Back</button>

                        </div>
                    </div>
                </div>
               
           
         

           


        </form>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}